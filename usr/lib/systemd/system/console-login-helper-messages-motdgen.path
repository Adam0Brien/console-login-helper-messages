[Unit]
Description=Watch for /{etc,run,usr/lib}/console-login-helper-messages/motd.d changes

[Path]
PathExistsGlob=/etc/console-login-helper-messages/motd.d/*
PathExistsGlob=/run/console-login-helper-messages/motd.d/*
PathExistsGlob=/usr/lib/console-login-helper-messages/motd.d/*

[Install]
WantedBy=multi-user.target
