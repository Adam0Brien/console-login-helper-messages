[Unit]
Description=Watch for files dropped into /{etc,run,usr/lib}/console-login-helper-messages/issue.d

[Path]
PathExistsGlob=/etc/console-login-helper-messages/issue.d/*
PathExistsGlob=/run/console-login-helper-messages/issue.d/*
PathExistsGlob=/usr/lib/console-login-helper-messages/issue.d/*

[Install]
WantedBy=multi-user.target
